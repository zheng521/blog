<%- include head %>
    <%- include nav %>
    <div class="container">
    	 <div class="row">
    	 	   <div class="col-md-12">
    	          <h3 class="text-center">发表新文章</h3>
    	          <form class="form-horizontal" method="post" id="defaultForm">
									  <div class="form-group">
									    <label for="inputTitle" class="col-sm-2 control-label">标题</label>
									    <div class="col-sm-10">
									      <input type="text" class="form-control" id="inputTitle" placeholder="标题" name="title">
									    </div>
									  </div>
									  <div class="form-group">
									    <label for="inputTextarea" class="col-sm-2 control-label">正文</label>
									    <div class="col-sm-10">
									      <textarea class="form-control" id="inputTextarea" name="content"></textarea>
									    </div>
									  </div>
									  <div class="form-group">
									    <div class="col-sm-offset-2 col-sm-10">
									      <button type="submit" class="btn btn-default">提交</button>
									    </div>
									  </div>
								</form>
    	 	   </div> 
    	 </div>
    </div>
<%- include footer %>
